{
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "__framework": false,
    "__common": false,
    "__root": true,
    "__module": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "off",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-empty": "off",
    "no-unused-vars": "off",
    "prefer-const": "error",
    "no-const-assign": "error"
  }
}